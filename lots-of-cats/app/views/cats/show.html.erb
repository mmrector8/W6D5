<h1>Individual Cats!!!!!</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Birthday</th>
    <th>Description</th>
  </tr>
  <tr>
    <td> <%= @cat.name  %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td> <%= @cat.birth_date %></td>
    <td><%= @cat.description %></td>

  </tr>
</table>

<h1> Rental Requests </h1>
<% if @cat.rental_requests.empty? %>
<p> <% @cat.name %> has no rental requests> </p>
<% else %>
  <table>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
    <tr>
    <td> <%= @CatRentalRequest.start_date  %></td>
    <td><%= @CatRentalRequest.end_date%></td>
    <td><%= @CatRentalRequest.status %></td>

  </tr>
  </table>
  <% end %>