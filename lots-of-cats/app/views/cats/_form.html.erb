<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :PATCH : :POST) %>

<form action="<%=action%>" method = "POST">
    <input type = "hidden" name = "_method" value= "<%= method %>"%>

 <label>Name:
    <input type="text" name="cat[name]" value="<%= cat.name%>" placeholder="Name"/><br>
  </label> <br>

  <label>Sex:
    <label for="F"> F</label>
         <input type="radio" id = "F" name="cat[sex]" value="<%= cat.sex%>" <%= cat.sex == "F" ? "checked" : "" %> />
    <label for="M"> M</label>
        <input type = "radio" id= "M" name= "cat[sex]" value = "<%= cat.sex%>" <%= cat.sex == "M" ? "checked" : "" %>> <br>
  </label> <br>

   <label>Color: 
    <select name="cat[color]">
    <option disabled> please choose a color! </option>
    <% Cat::CAT_COLORS.each do |color| %>
        <option value="<%= color %>"> <%= cat.color == color ? "selected" : "" %> <%= color%> </option>
    <% end %>
    </select>
  </label> <br><br>

   <label>Date:
    <input type="date" name="cat[birth_date]" value="<%= cat.birth_date%>" /><br>
  </label>
    <br>
    
  <label>Description(optional): <br>
    <textarea name="cat[description]"> <%= cat.description %>
    </textarea>
  </label> 
  
  <br>
    <% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
    <input type ="submit" value="<%= submit_text %>">
</form>